{
  "auto_install_extensions": {
    "html": true,
    "nix": true,
    "toml": true
  },
  "buffer_font_size": 14.0,
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    }
  },
  "lsp": {
    "nixd": {
      "settings": {
        "diagnostic": {
          "suppress": ["sema-extra-with"]
        }
      },
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "rust": {
          "analyzerTargetDir": true
        }
      }
    }
  },
  "terminal": {
    "env": {
      "TERM": "rio"
    },
    "font_family": "IBM Plex Mono",
    "shell": "system"
  },
  "ui_font_size": 16.0
}
